{
  "indexing": {
    "watch": true,
    "debounce_ms": 500,
    "batch_size": 100,
    "db_batch_size": 500,
    "max_concurrent": 4,
    "include_patterns": [
      "**/*.cs",
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.md"
    ],
    "exclude_patterns": [
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/bin/**",
      "**/obj/**",
      "**/dist/**",
      "**/coverage/**",
      "**/vendor/**",
      "**/build/**",
      "**/out/**",
      "**/tmp/**",
      "**/.git/**",
      "**/.vscode/**",
      "**/.idea/**",
      "**/.cache/**",
      "**/.next/**",
      "**/.nuxt/**",
      "**/.vercel/**",
      "**/.expo/**",
      "**/.yarn/**",
      "**/.pnpm/**",
      "**/.husky/**"
    ]
  }
}

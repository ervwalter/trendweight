{
  "timezone": "America/Chicago",
  "extends": ["config:js-app", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["^@chakra-ui", "^@emotion", "^framer-motion"],
      "groupName": "chakra-ui"
    },
    {
      "packagePatterns": ["^firebase"],
      "groupName": "firebase"
    },
    {
      "packageNames": ["@types/react"],
      "groupName": "react monorepo"
    },
    {
      "packageNames": ["jsonwebtoken", "@types/jsonwebtoken"],
      "groupName": "jsonwebtoken"
    }
  ]
}

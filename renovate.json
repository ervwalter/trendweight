{
  "timezone": "America/Chicago",
  "extends": ["config:js-app", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    },
    {
      "packagePatterns": ["^@chakra-ui", "^@emotion", "^framer-motion"],
      "groupName": "chakra-ui"
    },
    {
      "packagePatterns": ["^firebase"],
      "groupName": "firebase"
    },
    {
      "packageNames": ["@types/react"],
      "groupName": "react monorepo"
    },
    {
      "packageNames": ["jsonwebtoken", "@types/jsonwebtoken"],
      "groupName": "jsonwebtoken"
    }
  ]
}
